<Styles xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Design.PreviewWith>
        <Border Padding="20">
            <Image Source="avares://Client/Assets/Items/ReinforcedIronPlate.png" Classes="Small"></Image>
        </Border>
    </Design.PreviewWith>

    <!-- Image original with shadow -->
    <Style Selector="Image.Standard">
        <Setter Property="Width" Value="64" />
        <Setter Property="Effect">
            <DropShadowEffect OffsetX="0" BlurRadius="10"></DropShadowEffect>
        </Setter>
    </Style>
    
    <!-- Image small with shadow -->
    <Style Selector="Image.Small">
        <Setter Property="Width" Value="32" />
        <Setter Property="Effect">
            <DropShadowEffect OffsetX="0" BlurRadius="5" OffsetY="3" Color="DimGray"></DropShadowEffect>
        </Setter>
    </Style>
    
</Styles>
