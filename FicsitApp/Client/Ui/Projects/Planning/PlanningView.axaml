<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="clr-namespace:Client.Ui.Projects.Planning"
             xmlns:shared="clr-namespace:Client.Shared.DomainModel"
             mc:Ignorable="d" d:DesignWidth="1024" d:DesignHeight="450"
             x:Class="Client.Ui.Projects.Planning.PlanningView"
             x:DataType="vm:PlanningViewModel"
             Background="{DynamicResource BrushBackground}">
    <Border Classes="BorderGroup">
        <StackPanel>
            <vm:CalculationEntryView DataContext="{Binding MainItemViewModel}" />
            <Border BorderThickness="1" BorderBrush="Black" />
            <ItemsControl ItemsSource="{Binding NeededParts, FallbackValue=xxx}">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <vm:CalculationEntryView />
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </StackPanel>
    </Border>
</UserControl>