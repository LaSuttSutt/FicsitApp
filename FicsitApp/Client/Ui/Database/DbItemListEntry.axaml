<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="using:Client.Ui.Database"
             xmlns:helper="using:Client.Helper"
             mc:Ignorable="d"
             x:Class="Client.Ui.Database.DbItemListEntry"
             x:DataType="vm:DbItemListEntryViewModel">

    <Border BorderBrush="DimGray" BorderThickness="0 0 0 1">
        <StackPanel Orientation="Horizontal">
            <Image
                Source="{Binding Item.Image, 
                        FallbackValue={x:Static helper:ImageHelper.DefaultImage}} "
                Width="32" Margin="5 3">
                <Image.Effect>
                    <DropShadowEffect OffsetX="1" OffsetY="1" BlurRadius="7"></DropShadowEffect>
                </Image.Effect>
            </Image>
            <TextBlock Text="{Binding Item.Name, FallbackValue=Test-Item}" 
                       FontSize="16" Margin="10 0"
                       VerticalAlignment="Center" FontFamily="{DynamicResource Poppins}"/>
        </StackPanel>
    </Border>

</UserControl>